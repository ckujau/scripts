defscrollback	2000
deflogin	on
hardcopy_append	on
activity	"activity in %n (%t) [%w:%s]~"
bell_msg	"message in %n (%t) [%w:%s]~"
hardstatus	alwayslastline "%{= kY} %H | %Y-%m-%d %c:%s | Load: %l | %w"
term		xterm
source		${HOME}/.screenrc.local

